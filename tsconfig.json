{
  "include": ["./src"],
  "exclude": ["./dist"],
  "compilerOptions": {
    "outDir": "./dist",     
    "declaration": true,                              
    "target": "es2016", 
    "typeRoots": ["./node_modules/@types", "src/declarations.d.ts"],
    "module": "commonjs", 
    "allowJs": true, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true                                 
  }
}
